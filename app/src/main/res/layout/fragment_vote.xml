<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="112dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_huge"
    >

  <ImageView
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:adjustViewBounds="true"
      app:srcCompat="@drawable/checkbox_marked_outline"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/spacing_large"
      android:text="@string/label_vote_fragment"
      android:textColor="@color/primary_text_white"
      android:textSize="@dimen/letter_xlarge"
      android:textStyle="bold"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/spacing_medium"
      android:gravity="center"
      android:text="@string/label_vote_description"
      android:textColor="@color/primary_text_white"
      android:textSize="@dimen/letter_small"
      />

</LinearLayout>
