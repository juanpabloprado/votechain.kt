<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_reservation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/corner_radius_card_view"
    card_view:cardElevation="4dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    >

  <RelativeLayout
      android:id="@+id/container_candidate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <ImageView
        android:transitionName="@string/fragment_image_trans"
        android:id="@+id/imageCandidate"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:contentDescription="@string/candidate"
        />

    <TextView
        android:id="@+id/labelNameCandidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageCandidate"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_toLeftOf="@+id/imagePoliticParty"
        android:layout_toStartOf="@+id/imagePoliticParty"
        android:maxLines="2"
        android:text="Amet Albeto Alvirde Marquez"
        android:textColor="@color/primary_text_white"
        android:textSize="@dimen/letter_medium"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/labelPoliticParty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/labelNameCandidate"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        android:maxLines="3"
        android:text="Partido Revolucionario Institucional"
        android:textColor="@color/secondary_text_white"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagePoliticParty"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageCandidate"
        android:layout_margin="@dimen/spacing_small"
        android:padding="16dp"
        />

  </RelativeLayout>


</android.support.v7.widget.CardView>
